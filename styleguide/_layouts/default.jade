  body
    .row.row-eq-height
      button.navZoolander-slideBtn.navZoolander-leftArrow
      .navZoolander-container
        .siteHeader-logo
          .siteHeader-logoImg
        ul.navZoolander-list
          li.navZoolander-item
            a(href="#").navZoolander-link.navZoolander-hasDropdown Home
            ul.navZoolander-dropdown
              li.navZoolander-item
                a(href="./").navZoolander-dropdownLink Welcome
              li.navZoolander-item
                a(href="global/styleguide").navZoolander-dropdownLink Living Styleguide
              li.navZoolander-item
                a(href="global/contributing").navZoolander-dropdownLink Contributing

          li.navZoolander-item
            a(href="#").navZoolander-link.navZoolander-hasDropdown Brand Guidelines
            ul.navZoolander-dropdown
              li.navZoolander-item
                a(href="global/").navZoolander-dropdownLink Overview
              li.navZoolander-item
                a(href="global/brand-elements").navZoolander-dropdownLink Brand Elements
              li.navZoolander-item
                a(href="global/voice").navZoolander-dropdownLink Voice and Tone

          li.navZoolander-item
            a(href="#").navZoolander-link.navZoolander-hasDropdown Global Theme
            ul.navZoolander-dropdown
              li.navZoolander-dropdownItem
                a(href="derek/global-theme/").navZoolander-dropdownLink Overview
              li.navZoolander-dropdownItem
                a(href="derek/global-theme/typography").navZoolander-dropdownLink Typography
              li.navZoolander-dropdownItem
                a(href="derek/global-theme/photography").navZoolander-dropdownLink Photography/Banners
              li.navZoolander-dropdownItem
                a(href="derek/global-theme/swatches").navZoolander-dropdownLink Colors/Swatches
              li.navZoolander-dropdownItem
                a(href="derek/global-theme/icon-font").navZoolander-dropdownLink Icon Font
              li.navZoolander-dropdownItem
                a(href="derek/global-theme/buttons").navZoolander-dropdownLink Buttons/CTAs
              li.navZoolander-dropdownItem
                a(href="derek/global-theme/tables").navZoolander-dropdownLink Tables
              li.navZoolander-dropdownItem
                a(href="derek/global-theme/forms").navZoolander-dropdownLink Forms

          //Add in themes dropdown when there are multiple

          li.navZoolander-item
            a(href="#").navZoolander-link.navZoolander-hasDropdown Ecommerce Theme
            ul.navZoolander-dropdown
              li.navZoolander-item
                a(href="derek/").navZoolander-dropdownLink Overview
              li.navZoolander-item
                a(href="derek/templates").navZoolander-dropdownLink Templates
              li.navZoolander-item
                a(href="derek/patterns/patterns").navZoolander-dropdownLink Patterns
              li.navZoolander-item
                a(href="derek/assets").navZoolander-dropdownLink Asset Library
              li.navZoolander-item
                a(href="derek/incubation").navZoolander-dropdownLink Dev Sandbox

    .mainContainer#mainContainer
      block content

  script(src="#{base}js/global.js")
  script.
    $(".imacBanner-headline").fitText(1.1, { maxFontSize: '45px' });
