<script type="text/javascript">
  $('.rsDedicatedConfig-container').each(function() {
    var $el = $(this);
    var $specsMsg = $el.find('.rsDedicatedConfig-specs-msg');
    var $specsIcon = $el.find('.rsDedicatedConfig-specs-icon');
    $el.find('.rsDedicatedConfig-specs-title').click(function(e) {
      e.preventDefault();
      var $this = $(this);
      var $content = $el.find('.rsDedicatedConfig-content-hidden');
      $content.slideToggle(200, function() {
        if ($content.is(':visible')) {
          $specsMsg.html('Show me Less');
          $specsIcon.addClass('rsDedicatedConfig-specs-iconOpen');
          $el.addClass('rsDedicatedConfig-container-open');
        } else {
          $specsMsg.html('Show me the Specs');
          $specsIcon.removeClass('rsDedicatedConfig-specs-iconOpen');
          $el.removeClass('rsDedicatedConfig-container-open');
        }
      });
    });
  });
</script>
