<!-- Default description to allow for partial override to demonstrate really long text and equal height -->
<% if(!desc) { var desc = "Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque"; } %>
<!-- Value Props Pattern -->

<div class="valueProp">
  <div class="valueProp-row">
    <div class="valueProp-media">
      <div class="valueProp-icon">
        <i class="rsweb idio-brain"></i>
      </div>
    </div>
  </div>
  <div class="valueProp-row">
    <h3 class="valueProp-header">This a value headline with a max of 50 characters</h3>
  </div>
  <div class="valueProp-row">
    <div class="valueProp-body">
      <p><%- desc %></p>
    </div>
  </div>
</div>
